---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" href="/favicon.svg" />
    <link rel="me" href="https://mastodon.social/@imadeaplaylist" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.bunny.net" />
    <!-- Font resources have been replaced with Courier Prime that's loaded via @font-face in global.css -->
    <slot name="head" />
  </head>
  <body class="zag-bg zag-text zag-transition font-mono">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
    
    <script is:inline>
      // Language switching functionality
      function updateLanguage() {
        const currentLang = document.documentElement.getAttribute("data-lang") || "en";
        
        // Update all translatable elements
        document.querySelectorAll(".lang-text").forEach(element => {
          const enText = element.getAttribute("data-lang-en");
          const esText = element.getAttribute("data-lang-es");
          element.textContent = currentLang === "es" ? esText : enText;
        });
        
        // Update page titles
        document.querySelectorAll("[data-lang-en]").forEach(element => {
          if (!element.classList.contains("lang-text")) {
            const enText = element.getAttribute("data-lang-en");
            const esText = element.getAttribute("data-lang-es");
            element.textContent = currentLang === "es" ? esText : enText;
          }
        });
      }
      
      // Listen for language changes
      const observer = new MutationObserver((mutations) => {
        mutations.forEach((mutation) => {
          if (mutation.type === 'attributes' && mutation.attributeName === 'data-lang') {
            updateLanguage();
          }
        });
      });
      
      observer.observe(document.documentElement, {
        attributes: true,
        attributeFilter: ['data-lang']
      });
      
      // Initialize language on page load
      document.addEventListener('DOMContentLoaded', updateLanguage);
    </script>
  </body>
</html>
